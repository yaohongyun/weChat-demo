<!--pages/login/login.wxml-->
<view class="login">
  <view class="header">
    <image src="../images/yyc-wms-app-login.jpg" />
  </view>
  <view class="box">
    <view class="block mobile">
      <text class="icon">手机号</text>
      <view class="input_box">
        <input id="mobile" class="block_input" placeholder-style="color:#999" type="number" maxlength="11" placeholder="请输入手机号码" />
        <view class="btn_send_code">获取验证码</view>
      </view>
    </view>
    <view class="block code">
      <text class="icon">验证码</text>
      <view class="input_box">
        <input id="passsword" class="block_input" placeholder-style="color:#999" type="number" maxlength="6" placeholder="请输入手机验证码" />
      </view>
    </view>
    <view class="submit">
      <view class="btn btn_login">登录</view>
      <view class="btn btn_get_phone">微信一键登录</view>
      <view class="text">登录即视为您已同意<text>用户协议</text></view>
    </view>
  </view>
</view>
